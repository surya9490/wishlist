<script src="{{ "wishlist.js" | asset_url }}" defer></script>

<div class="wishlist">
  <button class="wishlist-icon" data-product-id="{{ product.selected_or_first_available_variant.id }}">
    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 25 22" fill="none">
      <path d="M12.4869 22C12.2364 21.9968 11.9918 21.9232 11.7804 21.7875C8.18822 19.57 5.48518 17.3766 3.2783 14.8705C2.01853 13.5287 1.04215 11.942 0.408559 10.207C-0.730606 6.84675 0.5832 2.9211 3.46882 1.07256C4.78425 0.221399 6.35422 -0.134962 7.90363 0.0659208C9.45304 0.266804 10.8831 1.01212 11.9431 2.17126C12.1376 2.37977 12.3162 2.60031 12.4869 2.81685C12.7194 2.51694 12.97 2.2317 13.2371 1.96275C13.8816 1.32075 14.6473 0.816306 15.4888 0.479444C16.3303 0.142583 17.2302 -0.0198119 18.1351 0.00192686C19.0214 0.0266866 19.8936 0.23235 20.6992 0.606539C21.5048 0.980728 22.2271 1.51571 22.8227 2.17928C25.0693 4.63732 25.6012 7.62065 24.3072 10.8045C23.6255 12.404 22.6611 13.8647 21.4613 15.1151C19.3548 17.3836 16.9713 19.3724 14.3683 21.0336C14.019 21.2662 13.6578 21.4907 13.3006 21.7113L13.1934 21.7795C12.9825 21.9174 12.738 21.9937 12.4869 22Z" stroke="#000000" fill="none"></path>
    </svg>
    {% assign wishlist_text = block.settings.wishlist_text | default: 'add to Wishlist' %}
    <span class="wishlist-icon-text">{{ wishlist_text }}</span>
  </button>
</div>

{% style %}
  .wishlist .wishlist-icon {
    background:transparent;
    border:none;
    display:flex;
    align-items:center;
    gap:10px;
    cursor:pointer;
    font-family:inherit;
  }
  .wishlist svg path {
    stroke:{{ block.settings.colour | default: '#ff0000' }};
    fill:inherit;
  }

  .wishlist [wishlisted] svg path {
    fill:red;
  }
{% endstyle %}

{% schema %}
{
  "name": "wishlist",
  "target": "section",
  "settings": [
    { "type": "text", "id": "wishlist_text", "label": "Wishlist Text", "default": "Wishlist" },
    { "type": "color", "id": "colour", "label": "Star Colour", "default": "#ff0000" }
  ]
}
{% endschema %}
